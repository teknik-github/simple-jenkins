pipeline { ## test
    agent {
        docker {
            image 'python:3'
            args '-u root'
        }
    }
    stages {
        stage('Build') {
            steps {
                echo 'Build step executed'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing step executed'
            }
        }       
        stage('Approval') {
            steps {
                input message: 'Lanjutkan ke tahap deploy?', ok: 'Proceed', submitter: 'admin' // Ganti dengan nama user Anda
            }
        }
        stage('Deploy') {
            steps {
                sh '''
                    #!/bin/bash
                    echo "Deploying the application"
                    python3 main.py
                '''
            }
        }
    }
}
