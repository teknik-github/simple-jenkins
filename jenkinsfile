pipeline {
    agent {
        docker{
            image 'python:latest'
            args '-u root'
        }
    }
    stages {
        stage('Build') {
            steps {
                echo 'build'
            }
        }
        stage('Test') {
            steps {
                echo'testing'
            }
        }       
        stage('approval') {
            steps{
               input message: 'lanjutkan ke tahap deploy', ok: 'proceed', submitter: 'user'
            }
        }
        stage('Deploy') {
            steps {
                sh 'python3 main.py'
            }
       }
    }
}
