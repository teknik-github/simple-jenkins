pipeline {
    agent {
        docker {
            image 'python:3.9'
            args '-u root'
        }
    }
    stages {
        stage('Build') {
            steps {
                echo 'build'
            }
        }
        stage('Test') {
            steps {
                echo'testing'
            }
        }
        stage('Manual Approval') {
            steps {
                input message: 'Lanjutkan ke tahap deploy', ok: proceed, submitter: 'user'
            }
        }
       stage('Deploy') {
        steps {
               sh 'python3 main.py'
            }
       }
    }
}
